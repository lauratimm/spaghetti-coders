<UserControl x:Class="Spaghetti_Coders.Controls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Spaghetti_Coders.Controls"
             x:Name="root"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Hidden">

        <Grid Background="#deafb3">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Height="75" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" x:Name="OrderButton" Height="50" Width="50" Background="#FFD57174" BorderBrush="#FF170404" HorizontalAlignment="Left" FlowDirection="LeftToRight" Margin="10">
                    <Image x:Name="Order_Icon" Stretch="Fill" Source="/Images/order.png" Height="22" Width="22"/>
                </Button>

                <Label
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontStyle="Italic"
                    FontWeight="SemiBold"
                    FontSize="18"
                    Content="{Binding Title, ElementName=root}" />

                <Button Grid.Column="2" x:Name="SortButton" Height="50" Width="50" Background="#FFD57174" BorderBrush="#FF170404" HorizontalAlignment="Right" FlowDirection="LeftToRight" Margin="10" >
                    <Image x:Name="Sort_Icon" Stretch="Fill" Source="/Images/sort.png" Height="22" Width="22"/>
                </Button>

            </Grid>

            <StackPanel Grid.Row="1" Orientation="Vertical">

                <local:FoodItem
                    Title="Spicy Ramen"
                    Description="Spicy miso based soup topped with sesame, green onions, corn seeds, beansprouts, enoki mushrooms, and egg."
                    ImageSource="/Images/spicy-ramen.jpg"
                    Click="OnFoodItemClick"/>
                <local:FoodItem
                    Title="Tempura"
                    Description="Tempura Description"
                    ImageSource="/Images/tempura.jpg"
                    Click="OnFoodItemClick"/>
                <local:FoodItem
                    Title="Miso Ramen"
                    Description="Miso Ramen Description"
                    ImageSource="/Images/miso-ramen.jpg"
                    Click="OnFoodItemClick"/>
                <local:FoodItem
                    Title="California Roll"
                    Description="California Roll Description"
                    ImageSource="/Images/california-roll.jpg"
                    Click="OnFoodItemClick"/>
                <local:FoodItem
                    Title="Tuna Roll"
                    Description="Tuna Roll Description"
                    ImageSource="/Images/tuna-roll.jpg"
                    Click="OnFoodItemClick"/>
                <local:FoodItem
                    Title="Salmon Sushi Roll"
                    Description="Salmon Sushi Roll Description"
                    ImageSource="/Images/salmon-sushi-roll.jpg"
                    Click="OnFoodItemClick"/>
                <local:FoodItem
                    Title="Salmon Sushi"
                    Description="Salmon Sushi Description"
                    ImageSource="/Images/salmon-sushi.jpg"
                    Click="OnFoodItemClick"/>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
