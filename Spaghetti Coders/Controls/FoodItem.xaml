<UserControl x:Class="Spaghetti_Coders.Controls.FoodItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <Grid MouseDown="OnClick" Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image HorizontalAlignment="Left" Source="/Images/spicy-ramen.jpg" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock VerticalAlignment="Center" Text="{Binding Title, ElementName=root}" />

            <TextBlock Grid.Row="1" FontSize="12" TextWrapping="Wrap" Text="Miso Soup, fermented soybean paste, is made from soybeans, grains (steamed rice or barley), salt, and koji culture (a fermentation starter)." />
        </Grid>
    </Grid>
</UserControl>
