<UserControl x:Class="Spaghetti_Coders.OrderItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spaghetti_Coders"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="42*" />
            <ColumnDefinition Width="13*" />

        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,10,0" RenderTransformOrigin="0.553,0.5">
            <Button x:Name="RemoveItem"  Background="#FFD57174" BorderBrush="#FF0A0101"  FontSize="20" BorderThickness="1,1,1,1" Height="26" Width="27" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,0,0,0" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="100"/>
                    </Style>

                </Button.Resources>
                <Image Height="56" Width="15" Source="/letter-x-icon-free-of-entypo-icons-327012.png"/>
            </Button>
        </Grid>

        <Grid Grid.Column="1" Margin="10,0,75,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="23*"/>
            </Grid.RowDefinitions>
            <Image Source="/Controls/spicy-ramen.jpg" Margin="-10,12,-70,4" Grid.RowSpan="2" />
        </Grid>

        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="21*" />
                <RowDefinition Height="29*" />
                <RowDefinition Height="25*"/>

            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="30" TextWrapping="Wrap" HorizontalAlignment="Left" Text="Spicy Ramen"  FontWeight="Normal" Margin="0,-1,0,55" Grid.RowSpan="2" Width="191" Grid.ColumnSpan="2"   />
            <TextBlock Grid.Row="2" TextWrapping="Wrap" HorizontalAlignment="Left" Width="57" Margin="1,0,0,4" ><Run Language="en-ca" Text="-No Egg"/></TextBlock>
            <Label x:Name="Quantity" Content="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="28" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="91,10,0,0" Grid.ColumnSpan="2"/>
            <Button Width="44" Background="#FFD57174" BorderBrush="#FF170404" HorizontalAlignment="Center" FlowDirection="LeftToRight" Margin="0,5,0,7" Grid.Row="1" >
                <Image Height="37" Width="35" Source="/257-2575067_ic-ala-ios-back-comments-left-arrow-svg.png" HorizontalAlignment="Left"/>
            </Button>
            <Button Content="Edit Item" HorizontalAlignment="Left" Margin="68,20,0,0" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="74" Grid.ColumnSpan="2"/>
            <Button Width="44" Background="#FFD57174" BorderBrush="#FF170404" FlowDirection="LeftToRight" Grid.Column="1" Margin="25,5,45,7" Grid.Row="1" >
                <Image Height="37" Width="35" Source="/282-2826625_short-arrow-right-svg-png-icon-free-download-487639-slider-arrow-icon.png"/>
            </Button>

        </Grid>
        <Grid Grid.Column="3">
            <TextBlock FontSize="20" TextWrapping="Wrap" Text="$12.99" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="63" RenderTransformOrigin="0.5,0.5" Margin="0,10,0,0" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.424"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.159"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>

    </Grid>
</UserControl>
